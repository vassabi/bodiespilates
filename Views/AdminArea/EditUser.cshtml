@model Web.Models.AdminAreaViewModel
@{
    ViewData["Title"] = "Admin Area (Edit User)";
}

<div class="container">
    <div class="white-big-copy-section bg-orange section-content">
        <h1>
            Admin Area (Users)
        </h1>
        <partial name="~/Views/AdminArea/AdminToolbar.cshtml" />
    </div>

    @using (Html.BeginForm("SaveUser", "AdminArea", FormMethod.Post))
    {
        <div class="form-card-full">
            <div class="form-card-inner">
                <div class="form-group"><h3>Update @Html.DisplayFor(m => m.UserModel.User.FirstName)'s details</h3></div>
                <div class="form-row mb-4">
                    <div class="col">
                        @Html.TextBoxFor(m => m.UserModel.User.FirstName, new { @class = "form-control", @placeholder = "First name" })
                    </div>
                    <div class="col">
                        @Html.TextBoxFor(m => m.UserModel.User.LastName, new { @class = "form-control", @placeholder = "Last name" })
                    </div>
                </div>
                <div class="form-group"><small>Leave these fields blank if you do not want to reset user's password</small></div>
                <div class="form-row mb-4">
                    <div class="col">
                        @Html.TextBoxFor(m => m.UserModel.User.Password, new { @class = "form-control", @placeholder = "New password", @type = "password" })
                    </div>
                    <div class="col">
                        @Html.TextBoxFor(m => m.UserModel.User.RepeatPassword, new { @class = "form-control", @placeholder = "Repeat password", @type = "password" })
                    </div>
                </div>
                <div class="form-row mb-4">
                    <div class="col">
                        @Html.TextBoxFor(m => m.UserModel.User.Email, new { @class = "form-control", @placeholder = "Email address" })
                    </div>
                    <div class="col">
                        @Html.DropDownListFor(m => m.UserModel.User.RoleId, new SelectList(ViewBag.RolesList.Items, "ID", "Name"), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-row mb-4">
                    <div class="col">
                        @Html.HiddenFor(m => m.UserModel.User.Id)
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                    <div class="col"></div>
                </div>
            </div>
        </div>
        
    }
</div>
